<!DOCTYPE html>
<html lang="en" class="light-mode">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ToDo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Include Font Awesome link here -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
 

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <header>
        <div class="overlay"></div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 dark-mode">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ToDo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">View</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Actions" asp-action="Add">Add</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Help">Help</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Import">Import</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                    <!-- Modified dark mode toggle button with icon -->
                    <button id="toggleDarkModeButton" class="btn btn-primary">
                        <i id="darkModeIcon" class="bi"></i>
                    </button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- JavaScript to toggle dark mode -->
    <script>
        function toggleDarkMode() {
            const htmlElement = document.querySelector('html');
            htmlElement.classList.toggle('dark-mode');
        }

        function updateButtonIcon(isDarkMode) {
            const iconElement = document.getElementById('darkModeIcon');
            iconElement.className = isDarkMode ? 'bi bi-moon-fill' : 'bi bi-brightness-high-fill';
        }

        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('toggleDarkModeButton').addEventListener('click', toggleDarkMode);

            const savedMode = localStorage.getItem('mode');
            if (savedMode) {
                const htmlElement = document.documentElement;
                htmlElement.classList.add(savedMode);
                updateButtonIcon(savedMode === 'dark-mode');
            }
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
